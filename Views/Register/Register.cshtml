@model sistation.Models.User

@{
    ViewData["Title"] = "Criar Conta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower() == "register")
{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Criar Conta</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="d-flex align-items-center justify-content-center vh-100 bg-light">

    <div class="card p-4 shadow" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4">CRIAR CONTA</h2>

        <form asp-controller="Register" asp-action="Registrar" method="post">
            <div class="form-group mb-3">
                <input asp-for="Username" class="form-control" placeholder="Nome de usuário" />
            </div>
            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control" placeholder="E-mail" type="email" />
            </div>
            <div class="form-group mb-3">
                <input asp-for="PasswordHash" class="form-control" placeholder="Senha" type="password" />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-success">Registrar</button>
            </div>
        </form>

        <div class="text-center mt-3">
            Já tem uma conta? <a asp-controller="Login" asp-action="Index">Entrar</a>
        </div>
    </div>

</body>
</html>
