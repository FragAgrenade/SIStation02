@model IEnumerable<sistation.Models.Friend>

@{
    ViewData["Title"] = "Lista de Amigos";
}

<h1>Amigos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Novo Amigo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Email</td>
            <td>@item.Telefone</td>
            <td>
                <a asp-action="Edit" class="btn btn-primary">Alterar</a> |
                <a asp-action="Details" class="btn btn-primary">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-primary">Apagar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
